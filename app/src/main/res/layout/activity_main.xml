<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Шутка 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holiday"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What does Santa suffer from if he gets stuck in a chimney?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claustrophobia!"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Шутка 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animals"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why don’t scientists trust atoms?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because they make up everything!"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Добавляем оставшиеся шутки аналогичным образом -->

        <!-- Шутка 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why was the math book sad?" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because it had too many problems."
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Добавьте еще 4 шутки по аналогии -->

    </LinearLayout>
</ScrollView>
